<div class="modal-dialog"
     role="dialog"
     aria-labelledby="modalLabel"
     aria-hidden="true"
     id="modifier-modal">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h3 class="modal-title">
                {{"modifier_une_periode"|trans({},"presences")}} 
            </h3>
        </div>
        <div class="modal-body">

            <form id="ModifHoraireForm" 
                  method="post" {{ form_enctype(ModifPeriodForm) }} 
                  action="{{path("formalibre_period_modif",{"thePeriod":thePeriod.getId()})}}">  
                Nom:
                {{form_widget(ModifPeriodForm.nameModifPeriod)}}
                {{"date_debut"|trans({},"presences")}}: 
                {{form_widget(ModifPeriodForm.beginDateModifPeriod)}}
                {{"date_fin"|trans({},"presences")}}: 
                {{form_widget(ModifPeriodForm.endDateModifPeriod)}}
                {{"heure_ouverture"|trans({},"presences")}}: 
                {{form_widget(ModifPeriodForm.beginHourModifPeriod)}}
                {{"heure_fermeture"|trans({},"presences")}}:
                {{form_widget(ModifPeriodForm.endHourModifPeriod)}}
                {{"actual_periode"|trans({},"presences")}}:
                {{form_widget(ModifPeriodForm.visibleModifPeriod)}}
                </br> </br>
                

                <div class="row">
                    <div class="row">
                        <button class="btn btn-primary col-md-4 col-md-offset-1" 
                                type="submit" 
                                name="form[validerModifPeriod]">{{"modifier"|trans({},"presences")}}:
                        </button> 
                    </div>
                </div>
            </form>
        </div>
                    
    </div>
            </form>
         

</div>

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/formalibrepresence/js/bootstrap-datetimepicker.min.js') }}"></script>
    
     <script>
         
       $(document).ready(function() {
           document.getElementById("form_nameModifPeriod").defaultValue = "{{thePeriod.getPeriodName()}}";                        
        });
        
          $(document).ready(function() {
           document.getElementById("form_beginDateModifPeriod").defaultValue = "{{thePeriod.getPeriodBegin()|date('d-m-Y')}}";                        
        });
        
          $(document).ready(function() {
           document.getElementById("form_endDateModifPeriod").defaultValue = "{{thePeriod.getPeriodEnd()|date('d-m-Y')}}";                        
        });
        
          $(document).ready(function() {
           document.getElementById("form_beginHourModifPeriod").defaultValue = "{{thePeriod.getPeriodBeginHour()|date('H:i')}}";                        
        });
        
          $(document).ready(function() {
           document.getElementById("form_endHourModifPeriod").defaultValue = "{{thePeriod.getPeriodEndHour()|date('H:i')}}";                        
        });
        
        
     
         $(document).ready(function() {
            var current={% if thePeriod.getVisibility()%}true{%else%}false{%endif%};
            if(current){
                 document.getElementById("form_visibleModifPeriod").checked=true;
             }
                      
        });
    </script>
    <script>
        $(function () {
            $('#form_beginDateModifPeriod').datetimepicker({
                format: 'D-M-YYYY',
                locale:'fr',
                 icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-arrow-up",
            down: "fa fa-arrow-down"
        }
            });
        });
        $(function () {
            $('#form_endDateModifPeriod').datetimepicker({
                format: 'D-M-YYYY',
                locale:'fr',
                 icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-arrow-up",
            down: "fa fa-arrow-down"
        }
            });
        });
         $(function () {
            $('#form_beginHourModifPeriod').datetimepicker({
                format: 'HH:mm',
                locale:'fr',
                 icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-arrow-up",
            down: "fa fa-arrow-down",
            next: "fa fa-arrow-right",
            previous:"fa fa-arrow-left"
        }
            });
        });
        $(function () {
            $('#form_endHourModifPeriod').datetimepicker({
                format: 'HH:mm',
                locale:'fr',
                 icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-arrow-up",
            down: "fa fa-arrow-down",
            next: "fa fa-arrow-right",
            previous:"fa fa-arrow-left"
        }
            });
        });
    </script>
   

{% endblock %}
